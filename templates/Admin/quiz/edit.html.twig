{% extends "Admin/base.html.twig" %}


{% block body %}

 

       
<table style="width:50%;margin: 0 auto;" class="table mt-5">
    <thead class="table-light">
        <tbody>
            <tr>
               <th class="whitespace-nowrap" >ID</th>
                <td>{{ quiz.id }}</td>
            </tr>
            <tr>
                <th class="whitespace-nowrap">Quiz Name</th>
                <td>{{ quiz.quizName }}</td>
            </tr>

            <tr>
                <th class="whitespace-nowrap">quiz Description</th>
                <td>{{ quiz.descQuiz }}</td>
            </tr>
            <tr>
                <th class="whitespace-nowrap">Type</th>
                <td> {{quiz.type}} </td>
            </tr>
       

            
        </tbody>
    </table>

	<div style="width:50%;margin: 0 auto;" class="intro-y col-span-12 lg:col-span-6">

		{{ form_start(formed, {attr: {'novalidate': 'novalidate'}}) }}
		<!-- BEGIN: Validation Form -->
		<form class="validate-form">
			<div class="input-form">
				<label for="validation-form-1" class="form-label w-full flex flex-col sm:flex-row">
					Quiz Name
					<span class="sm:ml-auto mt-1 sm:mt-0 text-xs text-slate-500">Required</span>
				</label>
				{{ form_widget(formed.quizName, { 'attr': {'id': 'validation-form-1', 'class': 'form-control', 'placeholder': 'Quiz Name'} }) }}
				<div style="color:red" class="form-help">
            {{ form_errors(formed.quizName) }}
            </div>
			</div>

			<div class="input-form mt-3">
				<label for="validation-form-2" class="form-label w-full flex flex-col sm:flex-row">
					Description
					<span class="sm:ml-auto mt-1 sm:mt-0 text-xs text-slate-500">Required</span>
				</label>
				{{ form_widget(formed.descQuiz, { 'attr': {'id': 'validation-form-2', 'class': 'form-control', 'placeholder': 'Description'} }) }}
				<div style="color:red" class="form-help">
            {{ form_errors(formed.descQuiz) }}
            </div>
			</div>

			<div class="input-form mt-3">
				<label for="validation-form-3" class="form-label w-full flex flex-col sm:flex-row">
					Type
					<span class="sm:ml-auto mt-1 sm:mt-0 text-xs text-slate-500">Required</span>
				</label>
				{{ form_widget(formed.type, { 'attr': {'id': 'validation-form-3', 'class': 'form-control', 'placeholder': 'Type'} }) }}
				<div style="color:red" class="form-help">
            {{ form_errors(formed.type) }}
            </div>
			</div>

			<div class="input-form mt-3">
				<label for="validation-form-4" class="form-label w-full flex flex-col sm:flex-row">
					Points
					<span class="sm:ml-auto mt-1 sm:mt-0 text-xs text-slate-500">Required</span>
				</label>
				{{ form_widget(formed.Points, { 'attr': {'id': 'validation-form-4', 'class': 'form-control', 'placeholder': 'Points'} }) }}
				<div style="color:red" class="form-help">
            {{ form_errors(formed.Points) }}
            </div>
			</div>

			<button type="submit" class="btn btn-primary mr-1 mb-2">Change</button>


		</form>

		{{ form_end(formed) }}


	</div>


	<div  class="grid grid-cols-12 gap-5 mt-5">

		{% for ques in question %}
			<a href="{{ path('quest_details',{'id': ques.id}) }}">
				<div class="col-span-12 sm:col-span-4 2xl:col-span-3 box p-5 cursor-pointer zoom-in">
					<div class="font-medium text-base">{{ ques.text }}</div>
					<div class="text-slate-500">{{ ques.points }}
						points</div>
						
				</div>
			</a>
		{% endfor %}
		<a class="btn btn-sm btn-secondary w-24 mr-1 mb-2" href="{{ path('questionadd', {'idquiz': idquiz}) }}" >
			
				<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewbox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" icon-name="plus" data-lucide="plus" class="lucide lucide-plus block mx-auto">
					<line x1="12" y1="5" x2="12" y2="19"></line>
					<line x1="5" y1="12" x2="19" y2="12"></line>
				</svg>
				<div class="text-center text-xs mt-2">New quiz</div>
			</a>



	</div>

{% endblock %}
