{% extends "Admin/base.html.twig" %}


{% block group %}   {% endblock %}
{% block event %}   {% endblock %}
{% block market %}   {% endblock %}
{% block quiz %}   {% endblock %}
{% block reclamation %}   {% endblock %}

{%block body%}

<div class="intro-y col-span-12 overflow-auto lg:overflow-visible">

    <a href={{ path('app_addRep') }} class="btn btn-primary shadow-md mr-2">Add New REPONSE</a>
    <table class="table table-report -mt-2">
        <thead>
            <tr>
                <th class="whitespace-nowrap">ID USER</th>
                <th class="text-center whitespace-nowrap">ID REPONSE</th>
                <th class="text-center whitespace-nowrap">DESCRIPTION</th>
                
                <th class="text-center whitespace-nowrap">ACTION</th>
            </tr>
        </thead>
        <tbody>

            {%for r in reponses %}
            <tr class="intro-x">
                <td>
                    <a href="" class="font-medium whitespace-nowrap"></a> 
                </td>

                <td>
                <a href="" class="font-medium whitespace-nowrap">{{ r.id }}</a> 
                </td>

                <td>
                    <a href="" class="font-medium whitespace-nowrap">{{ r.getDescriptionRep() }}</a> 
                 </td>

                 
                <td class="table-report__action w-56">
                    <div class="flex justify-center items-center">
                        <a href={{ path('Edit_Rep',{'id': r.id}) }} class="flex items-center mr-3" href="javascript:;"> <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" icon-name="check-square" data-lucide="check-square" class="lucide lucide-check-square w-4 h-4 mr-1"><polyline points="9 11 12 14 22 4"></polyline><path d="M21 12v7a2 2 0 01-2 2H5a2 2 0 01-2-2V5a2 2 0 012-2h11"></path></svg> Edit </a>
                        <a href="{{ path('delete', {'id': r.id}) }}"class="flex items-center text-danger" href="javascript:;" data-tw-toggle="modal" data-tw-target="#delete-confirmation-modal"> <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" icon-name="trash-2" data-lucide="trash-2" class="lucide lucide-trash-2 w-4 h-4 mr-1"><polyline points="3 6 5 6 21 6"></polyline><path d="M19 6v14a2 2 0 01-2 2H7a2 2 0 01-2-2V6m3 0V4a2 2 0 012-2h4a2 2 0 012 2v2"></path><line x1="10" y1="11" x2="10" y2="17"></line><line x1="14" y1="11" x2="14" y2="17"></line></svg> 
                            Delete </a>
                    </div>
                </td>

            </tr>
            {% endfor %}
        </tbody>
    </table>

    

</div>
{% endblock %}

